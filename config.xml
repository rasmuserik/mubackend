<widget id="solsort.apps.mubackend" version="0.0.0" 
  xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>muBackend</name>
    <shortdescription>muBackend - micro-noBackend-backend</shortdescription>
    <date>2016-01</date>
    <description>
      muBackend is a micro-noBackend-backend, that provide authentication and databse-synchronisation to built client-side apps upon. 

      In short: passport-js for authentification, couchdb for database sync, and a bit of glue code to make it work together.
    </description>
    <author email="app@solsort.com" href="http://solsort.com">solsort.com</author>
    <icon src="icon.png" />
    <!--splash src="www/assets/splash.png" /-->
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />

    <preference name="orientation" value="default" />
    <preference name="permissions" value="none" /> 
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="false" />

